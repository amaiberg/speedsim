<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
              android:layout_width="fill_parent" android:orientation="vertical">
    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent" android:orientation="horizontal"  >
                  <!-- android:background="#FFFFFF"> -->

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="10px"
                  android:paddingLeft="10px"
                  android:layout_weight="1"
                  android:text="Slow"
                  android:layout_gravity="left"
                />

        <!-- android:textColor="#000000" -->
        <android.widget.SeekBar
                android:id="@+id/speedbar"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:progress="50"
                android:minHeight="40px"

                android:layout_width="wrap_content"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"
                />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="10px"
                  android:paddingLeft="20px"
                  android:layout_weight="1"
                  android:text="Fast"
                  android:layout_gravity="right"/>


    </LinearLayout>


    <RelativeLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent" > <!--  android:orientation="horizontal" -->


        <ImageButton android:id="@+id/leftArrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/leftarrow" 
            android:layout_alignParentLeft="true"
            android:onClick="flipBackView"/>
        
        <Button android:id="@+id/strtBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/startBtnTxt"
                android:layout_toRightOf="@id/leftArrow"
                android:onClick="pauseModel"/>
        
        <Button android:id="@+id/nxtBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/strtBtn"
                android:text="Single Step"
                android:onClick="next"/>

        <!--  <Button android:id="@+id/floating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch View"
                android:onClick="flipView"/> -->
        
         <Button android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Defaults"
                android:layout_toRightOf="@id/nxtBtn"
                android:onClick="reset"/>
         
        <Button android:id="@+id/restartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart"
                android:layout_toRightOf="@id/reset"
                android:onClick="restartModel"/>
        
		<ImageButton android:id="@+id/rightArrow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/rightarrow" 
			android:layout_alignParentRight="true"
            android:onClick="flipView"/>

    </RelativeLayout>
    
</LinearLayout>